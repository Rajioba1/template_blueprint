<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AvaloniaTemplateBlueprint.Demo.ViewModels"
        xmlns:shell="clr-namespace:AvaloniaTemplateBlueprint.AppShell.Controls;assembly=AvaloniaTemplateBlueprint.AppShell"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
        x:Class="AvaloniaTemplateBlueprint.Demo.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}"
        Width="1024" Height="768"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Margin="4">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Command="{Binding OpenFileCommand}" InputGesture="Ctrl+O"/>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" InputGesture="Ctrl+Z" IsEnabled="False"/>
                <MenuItem Header="_Redo" InputGesture="Ctrl+Y" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="Cu_t" InputGesture="Ctrl+X" IsEnabled="False"/>
                <MenuItem Header="_Copy" InputGesture="Ctrl+C" IsEnabled="False"/>
                <MenuItem Header="_Paste" InputGesture="Ctrl+V" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Debug Console" Command="{Binding ToggleConsoleCommand}" InputGesture="F12"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Command="{Binding ShowAboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="200,*">
            <!-- Navigation Sidebar -->
            <Border Grid.Column="0"
                    Background="{DynamicResource SystemControlBackgroundAltMediumLowBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="0,0,1,0">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0"
                               Text="Navigation"
                               FontWeight="SemiBold"
                               Margin="12,12,12,8"/>
                    <TreeView Grid.Row="1"
                              ItemsSource="{Binding NavigatorItems}"
                              SelectedItem="{Binding SelectedNavigatorItem}"
                              Margin="4">
                        <TreeView.ItemTemplate>
                            <TreeDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="{Binding Title}"/>
                                </StackPanel>
                            </TreeDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1" Margin="16">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
                    <TextBlock Text="Welcome to AvaloniaTemplateBlueprint Demo"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="This is a template for building Avalonia desktop applications."
                               FontSize="16"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" Margin="0,16,0,0">
                        <Button Content="Open File" Command="{Binding OpenFileCommand}" Padding="16,8"/>
                        <Button Content="Debug Console" Command="{Binding ToggleConsoleCommand}" Padding="16,8"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource SystemAccentColor}"
                Padding="8,4">
            <TextBlock Text="{Binding StatusText}"
                       Foreground="White"
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>
