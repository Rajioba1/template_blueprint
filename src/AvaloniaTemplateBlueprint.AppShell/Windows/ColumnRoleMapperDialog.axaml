<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="AvaloniaTemplateBlueprint.AppShell.Windows.ColumnRoleMapperDialog"
        Title="Map Columns"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False">

    <Grid RowDefinitions="Auto,*,Auto" Margin="16">
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,16">
            <TextBlock Text="Column Mapping"
                       FontSize="18"
                       FontWeight="SemiBold"/>
            <TextBlock Text="{Binding Description}"
                       TextWrapping="Wrap"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </StackPanel>

        <!-- Mapping Grid -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding RoleMappings}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*,Auto,*" Margin="0,4">
                                <!-- Role Label -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="{Binding RoleLabel}"
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="*"
                                               Foreground="Red"
                                               IsVisible="{Binding IsRequired}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Arrow -->
                                <TextBlock Grid.Column="1"
                                           Text="â†’"
                                           Margin="16,0"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                                <!-- Column Selector -->
                                <ComboBox Grid.Column="2"
                                          ItemsSource="{Binding AvailableColumns}"
                                          SelectedItem="{Binding SelectedColumn}"
                                          DisplayMemberBinding="{Binding Name}"
                                          HorizontalAlignment="Stretch"
                                          PlaceholderText="Select column..."/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="8"
                    Margin="0,16,0,0">
            <Button Content="Cancel"
                    Width="80"
                    Command="{Binding CancelCommand}"/>
            <Button Content="Apply"
                    Width="80"
                    Classes="accent"
                    Command="{Binding ApplyCommand}"
                    IsEnabled="{Binding IsValid}">
                <Button.Styles>
                    <Style Selector="Button.accent">
                        <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </Button.Styles>
            </Button>
        </StackPanel>
    </Grid>
</Window>
