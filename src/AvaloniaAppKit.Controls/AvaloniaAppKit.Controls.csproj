    <PackageReference Include="Avalonia.Controls.TreeDataGrid" Version="[$(TreeDataGridVersion)]" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AvaloniaAppKit.Core\AvaloniaAppKit.Core.csproj" />
  </ItemGroup>

</Project>
