<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>TreeDataGrid extensions and behaviors for AvaloniaAppKit template.</Description>
    <PackageId>AvaloniaAppKit.Controls</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="$(AvaloniaVersion)" />
