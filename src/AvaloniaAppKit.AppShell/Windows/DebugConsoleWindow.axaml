<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="400"
        x:Class="AvaloniaAppKit.AppShell.Windows.DebugConsoleWindow"
        Title="Debug Console"
        Width="800"
        Height="400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Styles>
        <!-- VS Code-style dark theme for console -->
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#D4D4D4"/>
            <Setter Property="FontFamily" Value="Consolas, 'Courier New', monospace"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#D4D4D4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="CornerRadius" Value="2"/>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#4C4C4C"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#D4D4D4"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#252526" Padding="8">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Clear" Command="{Binding ClearCommand}" ToolTip.Tip="Clear all logs"/>
                <Button Content="Copy (Redacted)" Command="{Binding CopyRedactedCommand}" ToolTip.Tip="Copy logs with sensitive data redacted"/>
                <Button Content="Copy (Full)" Command="{Binding CopyFullCommand}" ToolTip.Tip="Copy full logs (may contain sensitive data)"/>

                <Border Width="1" Background="#3C3C3C" Margin="8,0"/>

                <TextBlock Text="Level:" VerticalAlignment="Center" Margin="4,0"/>
                <ComboBox Name="LevelFilter" SelectedIndex="1" Width="120">
                    <ComboBoxItem Content="Trace"/>
                    <ComboBoxItem Content="Debug"/>
                    <ComboBoxItem Content="Information"/>
                    <ComboBoxItem Content="Warning"/>
                    <ComboBoxItem Content="Error"/>
                </ComboBox>

                <Border Width="1" Background="#3C3C3C" Margin="8,0"/>

                <CheckBox Content="Auto-scroll"
                          IsChecked="{Binding AutoScroll}"
                          Foreground="#D4D4D4"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Log Output -->
        <Border Grid.Row="1" Margin="4" CornerRadius="4" Background="#1E1E1E">
            <ScrollViewer Name="LogScrollViewer"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl Name="LogItems" ItemsSource="{Binding FilteredEntries}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="4,1">
                                <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}"
                                           Foreground="#808080"
                                           Width="70"/>
                                <TextBlock Text="{Binding LevelDisplay}"
                                           Width="40"
                                           FontWeight="SemiBold">
                                    <TextBlock.Styles>
                                        <Style Selector="TextBlock">
                                            <Setter Property="Foreground" Value="#808080"/>
                                        </Style>
                                    </TextBlock.Styles>
                                </TextBlock>
                                <TextBlock Text="{Binding Category}"
                                           Foreground="#569CD6"
                                           Width="150"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding Message}"
                                           TextWrapping="Wrap"
                                           Margin="8,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Padding="8,4">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <TextBlock Text="{Binding EntryCount, StringFormat='Entries: {0}'}"
                           Foreground="White"/>
                <TextBlock Text="{Binding FilteredCount, StringFormat='Filtered: {0}'}"
                           Foreground="White"/>
                <TextBlock Text="{Binding StdOutCaptureStatus}"
                           Foreground="White"
                           IsVisible="{Binding IsStdOutCaptureEnabled}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
